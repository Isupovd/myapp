			<center><%= image_tag("lab6-29.jpg") %></center>
			<center><%= image_tag("lab6-30.jpg") %></center>
			<center><%= image_tag("lab6-31.jpg") %></center>
			<center><%= image_tag("lab6-32.jpg") %></center>
